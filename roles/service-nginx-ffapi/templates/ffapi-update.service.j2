[Unit]
Description=Update {{ item.name }} Freifunk API file

[Service]
Type=oneshot
ExecStart={{ git_path }}/backend-scripts/update_ffapi_nodes_srv.sh -u {{ ffapi_nodes_url }} -f {{ item.path }}/{{ item.file }}{%for domain in item.ffdomains %} -d {{ domain }}{% endfor %}

User=admin
Group=admin
