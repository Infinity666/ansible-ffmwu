server {
    listen {{ lookup('dig', inventory_hostname, 'qtype=A') }}:9324 ssl;
    listen [{{ lookup('dig', inventory_hostname, 'qtype=AAAA') }}]:9324 ssl;
    server_name {{ inventory_hostname_short }}.{{ http_domain_external }} {{ inventory_hostname_short }}.{{ http_domain_internal }};

    include /etc/nginx/snippets/ssl.conf;

    location / {
      proxy_pass http://127.0.0.1:9324;

      allow 127.0.0.0/8;
      allow ::1/128;
{% for host in groups['monitoring'] %}
      allow {{ lookup('dig', host, 'qtype=A') }};
      allow {{ lookup('dig', host, 'qtype=AAAA') }};
{% endfor %}
      deny all;
    }
}
