server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    charset utf-8;
    server_tokens off;

    root /var/www/html;
    location / {
        index index.html;
        autoindex on;
        autoindex_exact_size off;
    }
}

server {
    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;
    server_name _;

    charset utf-8;
    server_tokens off;

    include /etc/nginx/snippets/ssl.conf;

    root /var/www/html;
    location / {
        index index.html;
        autoindex on;
        autoindex_exact_size off;
    }
}
