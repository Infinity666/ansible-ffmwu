server {
    listen 80;
    listen [::]:80;
    server_name {{ http_openlayers_external }} {{ http_openlayers_internal }};

    include /etc/nginx/snippets/gzip.conf;

    root {{ openlayers_path }};
    location / {
        autoindex on;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ http_openlayers_external }} {{ http_openlayers_internal }};

    include /etc/nginx/snippets/gzip.conf;
    include /etc/nginx/snippets/ssl.conf;

    root {{ openlayers_path }};
    location / {
        autoindex on;
    }
}
