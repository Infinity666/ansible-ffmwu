server {
    listen 80;
    listen [::]:80;
    server_name {{ http_mwu_landing_page_external }} {{ http_mwu_landing_page_internal }} {{ http_domain_external }} {{ http_domain_internal }};

    include /etc/nginx/snippets/gzip.conf;

    root {{ mwu_landing_page_path }};
    location / {
        autoindex on;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ http_mwu_landing_page_external }} {{ http_mwu_landing_page_internal }};

    include /etc/nginx/snippets/gzip.conf;
    include /etc/nginx/snippets/ssl.conf;

    root {{ mwu_landing_page_path }};
    index index.html index.htm;
}
